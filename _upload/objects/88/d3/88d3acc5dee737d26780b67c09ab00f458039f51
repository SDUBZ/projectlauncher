#tconstruct recipe removal
recipes.remove(<tconstruct:throwball:1>);
recipes.remove(<tconstruct:stone_torch>);
recipes.remove(<tconstruct:soil>);

recipes.remove(<tconstruct:seared_furnace_controller>);

#tconstruct toolforge recipe
recipes.remove(<tconstruct:toolforge>.withTag({textureBlock: {id: "minecraft:iron_block"}}));
var toolstation = <tconstruct:tooltables:3>;
var densesteel = <ic2:plate:16>;
var searedbricks = <tconstruct:seared:3>;
recipes.remove(<tconstruct:toolforge>);
recipes.addShaped(<tconstruct:toolforge>.withTag({textureBlock: {id: "minecraft:iron_block", Count: 1 as byte, Damage: 0 as short}}),[[searedbricks,searedbricks,searedbricks],[densesteel,toolstation,densesteel],[densesteel,null,densesteel]]);

#tconstruct stencil recipe
recipes.remove(<tconstruct:tooltables:1>.withTag({textureBlock: {id: "minecraft:planks", Count: 1 as byte, Damage: 0 as short}}));
var tcpattern = <tconstruct:pattern>;
var woodengear = <ore:gearWood>;
var bcframing = <bibliocraft:framingboard>;
var tcwoodenplate = <ore:plateWood>;
var mcfence = <ore:fenceWood>;
var mcstick = <ore:stickWood>;
recipes.remove(<tconstruct:tooltables:1>);
recipes.addShaped(<tconstruct:tooltables:1>.withTag({textureBlock: {id: "minecraft:planks", Count: 1 as byte, Damage: 0 as short}}),[[bcframing,tcpattern,bcframing],[tcwoodenplate,woodengear,tcwoodenplate],[bcframing,tcwoodenplate,bcframing]]);

#tconstruct part builder recipe
recipes.remove(<tconstruct:tooltables:2>.withTag({textureBlock: {id: "minecraft:log", Count: 1 as byte, Damage: 0 as short}}));
recipes.remove(<tconstruct:tooltables:2>);
recipes.addShaped(<tconstruct:tooltables:2>.withTag({textureBlock: {id: "minecraft:log", Count: 1 as byte, Damage: 0 as short}}),[[bcframing,tcpattern,bcframing],[woodengear,tcwoodenplate,woodengear],[bcframing,woodengear,bcframing]]);

