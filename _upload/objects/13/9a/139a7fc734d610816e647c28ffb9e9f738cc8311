#Thermal induction recipes for all mods

mods.thermalexpansion.InductionSmelter.addRecipe(<enderutilities:enderpart>, <minecraft:iron_ingot> *4, <minecraft:ender_pearl>, 1500, <thermalfoundation:material>, 20);

mods.thermalexpansion.InductionSmelter.addRecipe(<enderutilities:enderpart:1>, <minecraft:gold_ingot> *4, <minecraft:ender_pearl>, 1500, <thermalfoundation:material:1>, 20);

mods.thermalexpansion.InductionSmelter.addRecipe(<enderutilities:enderpart:20>, <minecraft:stick> *4, <minecraft:ender_pearl>, 1500, <thermalfoundation:material:800>, 20);

mods.thermalexpansion.InductionSmelter.addRecipe(<extrautils2:decorativesolidwood:1>, <minecraft:gold_ingot> *4, <minecraft:bookshelf>, 10000, <thermalfoundation:material:800>, 20);

mods.thermalexpansion.InductionSmelter.addRecipe(<environmentaltech:litherite_crystal>, <minecraft:diamond>, <actuallyadditions:item_misc:5> *4, 5000, <actuallyadditions:item_dust:7>, 20);

